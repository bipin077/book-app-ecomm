<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./includes/head") %>
</head>

<body class="g-sidenav-show  bg-gray-200">
    <%- include("./includes/left") %>
        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
            <!-- Navbar -->
            <%- include("./includes/header") %>
                <!-- End Navbar -->
                <div class="container-fluid py-4">
                    <div class="btn-group">
                        <a href="/add-book" class="btn btn-secondary">Add New Book </a>
                        <button class="btn btn-primary">Activate</button>
                        <button class="btn btn-warning">Deactivate</button>
                        <button class="btn btn-danger">Delete</button>
                    </div>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr>
                                <th width="1%">S.No.</th>
                                <th width="1%">Image</th>
                                <th width="1%">Book Name</th>
                                <th width="1%">Author</th>
                                <th width="1%">Price</th>
                                <th width="1%">Published On</th>
                                <th width="1%">Status</th>
                                <th width="1%">Edit</th>
                                <th width="1%">Delete</th>
                                <th width="1%"><input type="checkbox"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(i=0;i<books.length; i++){%>
                            <tr>
                                <td width="1%"><%= i+1 %></td>
                                <td width="1%"><%= books[i].book_image %></td>
                                <td width="1%"><%= books[i].book_name %></td>
                                <td width="1%"><%= books[i].author %></td>
                                <td width="1%">$ <%= books[i].book_price %></td>
                                <td width="1%"><%= books[i].publish_on %></td>
                                <td width="1%"><%= books[i].status %></td>
                                <td width="1%"><a href="/edit-book?id=<%= books[i]._id %>"><i class="fa fa-pencil-square-o"></i></a></td>
                                <td width="1%"><a href="/delete-book/<%= books[i]._id %>"><i class="fa fa-trash-o" ></i></a></td>
                                <th><input type="checkbox"></th>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
        </main>

        <!--   Core JS Files   -->
        <%- include("./includes/footer") %>
</body>

</html>